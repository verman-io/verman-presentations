\ProvidesPackage{turbovisioncolortheme}

\definecolor{tvbackground}{RGB}{0,0,128}       % Dark Blue Background
\definecolor{tvforeground}{RGB}{255,255,0}     % Bright Yellow Foreground
\definecolor{tvframe}{RGB}{0,0,192}            % Lighter Blue for Frames
\definecolor{tvalert}{RGB}{255,0,0}            % Red for Alerts

\definecolor{tvborder}{RGB}{192,192,192}       % Light Gray for Borders
\definecolor{tvbutton}{RGB}{0,0,255}           % Blue Button Background
\definecolor{tvbuttontext}{RGB}{255,255,255}   % White Button Text
\definecolor{tvpanel}{RGB}{0,0,64}             % Darker Blue for Panels
\definecolor{tvtable}{RGB}{0,0,192}            % Blue for Table Headers
\definecolor{tvinputbg}{RGB}{0,0,96}           % Input Field Background
\definecolor{tvinputfg}{RGB}{255,255,255}      % Input Field Text

\setbeamercolor{background canvas}{bg=tvbackground}
\setbeamercolor{normal text}{fg=tvforeground}
\setbeamercolor{alerted text}{fg=tvalert}
\setbeamercolor{frametitle}{fg=tvforeground,bg=tvframe}
\setbeamercolor{title}{fg=tvforeground,bg=tvframe}
\setbeamercolor{block title}{fg=tvforeground,bg=tvframe}
\setbeamercolor{block body}{fg=tvforeground,bg=tvbackground}
\setbeamercolor{button}{fg=tvbuttontext,bg=tvbutton}
\setbeamercolor{input field}{fg=tvinputfg,bg=tvinputbg}
